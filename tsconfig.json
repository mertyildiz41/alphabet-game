{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext", // Changed from commonjs to esnext for browser compatibility
    "moduleResolution": "node", // Often helpful with esnext
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}